{
  "name": "linear-agent",
  "version": "1.0.0",
  "description": "Linear-to-OpenCode AI Agent for automated development workflows",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:webhook": "tsx watch src/webhooks/agent-webhook-server.ts",
    "dev:simple": "tsx watch src/webhooks/simple-webhook-server.ts",
    "opencode": "opencode serve",
    "opencode:dev": "opencode serve --directory .",
    "build": "tsc",
    "start": "node -r dotenv/config dist/index.js",
    "start:webhook": "node -r dotenv/config dist/webhooks/agent-webhook-server.js",
    "start:simple": "node -r dotenv/config dist/webhooks/simple-webhook-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node scripts/test-opencode-serve-integration.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist"
  },
  "keywords": [
    "linear",
    "opencode",
    "ai-agent",
    "automation",
    "development"
  ],
  "author": "OpenCode Contributors",
  "license": "MIT",
  "dependencies": {
    "@linear/sdk": "^28.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "crypto": "^1.0.1",
    "axios": "^1.6.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/jest": "^29.5.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}