# LinearAgent Development Environment Configuration
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
LINEAR_WEBHOOK_PORT=3000
LINEAR_AGENT_NAME=OpenCode Agent Dev
LINEAR_AGENT_PUBLIC_URL=http://localhost:3000

# Linear OAuth Configuration
LINEAR_CLIENT_ID=your_linear_oauth_client_id
LINEAR_CLIENT_SECRET=your_linear_oauth_client_secret
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret
LINEAR_AGENT_USER_ID=cc2bfe59-fc5e-4c22-a082-a2787dcdf689

# Linear API Configuration
LINEAR_API_KEY=your_linear_api_key_here
LINEAR_BOT_OAUTH_TOKEN=your_linear_bot_oauth_token_here

# OpenCode Integration
OPENCODE_API_BASE_URL=https://api.opencode.dev
OPENCODE_WEBHOOK_SECRET=your_opencode_webhook_secret
OPENCODE_API_KEY=your_opencode_api_key_here

# OpenCode Serve Configuration
OPENCODE_SERVE_URL=http://127.0.0.1:53998
OPENCODE_SERVE_ENABLED=true

# Redis Configuration (for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=your_jwt_secret_for_sessions_development
ENCRYPTION_KEY=your_32_character_encryption_key_dev

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/agent.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
DEBUG_LINEAR_WEBHOOKS=true
MOCK_OPENCODE_RESPONSES=false

# Feature Flags
ENABLE_AI_RESPONSES=true
ENABLE_OPENCODE_INTEGRATION=true
ENABLE_ADVANCED_FEATURES=true
ENABLE_SIGNATURE_VERIFICATION=true

# Session Management (Legacy - deprecated)
# ENABLE_SESSION_MANAGEMENT=true
# ENABLE_SESSION_STREAMING=true
# ENABLE_SESSION_PERSISTENCE=true
# SESSION_TIMEOUT_MINUTES=30
# SESSION_MAX_MESSAGES=50
# SESSION_STORAGE_URL=redis://localhost:6379
# SESSION_CLEANUP_INTERVAL_MINUTES=5