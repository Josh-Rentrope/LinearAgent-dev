# LinearAgent Production Environment Configuration
# Copy this file to .env and update with your production values

# Environment
NODE_ENV=production
LINEAR_WEBHOOK_PORT=3000
LINEAR_AGENT_NAME=OpenCode Agent
LINEAR_AGENT_PUBLIC_URL=https://your-domain.com

# Linear OAuth Configuration
LINEAR_CLIENT_ID=your_production_linear_oauth_client_id
LINEAR_CLIENT_SECRET=your_production_linear_oauth_client_secret
LINEAR_WEBHOOK_SECRET=your_production_linear_webhook_secret
LINEAR_AGENT_USER_ID=cc2bfe59-fc5e-4c22-a082-a2787dcdf689

# Linear API Configuration
LINEAR_API_KEY=your_production_linear_api_key
LINEAR_BOT_OAUTH_TOKEN=your_production_linear_bot_oauth_token

# OpenCode Integration
OPENCODE_API_BASE_URL=https://api.opencode.dev
OPENCODE_WEBHOOK_SECRET=your_production_opencode_webhook_secret
OPENCODE_API_KEY=your_production_opencode_api_key

# OpenCode Serve Configuration
OPENCODE_SERVE_URL=http://localhost:53998
OPENCODE_SERVE_ENABLED=true

# Redis Configuration (Production)
REDIS_HOST=your_redis_host
REDIS_PORT=25061
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0

# Security (Use strong, unique values in production)
JWT_SECRET=your_production_jwt_secret_minimum_64_characters
ENCRYPTION_KEY=your_production_32_character_encryption_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/agent.log

# Rate Limiting (Stricter in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Production Settings
DEBUG_LINEAR_WEBHOOKS=false
MOCK_OPENCODE_RESPONSES=false

# Feature Flags
ENABLE_AI_RESPONSES=true
ENABLE_OPENCODE_INTEGRATION=true
ENABLE_ADVANCED_FEATURES=true
ENABLE_SIGNATURE_VERIFICATION=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# Monitoring and Alerting
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Session Management (Legacy - deprecated)
# ENABLE_SESSION_MANAGEMENT=true
# ENABLE_SESSION_STREAMING=true
# ENABLE_SESSION_PERSISTENCE=true
# SESSION_TIMEOUT_MINUTES=60
# SESSION_MAX_MESSAGES=100
# SESSION_STORAGE_URL=redis://your_redis_host:25061
# SESSION_CLEANUP_INTERVAL_MINUTES=10