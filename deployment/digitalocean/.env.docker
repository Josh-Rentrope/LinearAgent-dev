# Docker Environment Configuration
# This file is used by Docker Compose for environment variables

# Application Configuration
NODE_ENV=production
LINEAR_WEBHOOK_PORT=3000
LINEAR_AGENT_NAME=OpenCode Agent
LINEAR_AGENT_PUBLIC_URL=https://localhost

# Linear Configuration (Set these in your host environment or .env file)
LINEAR_CLIENT_ID=${LINEAR_CLIENT_ID}
LINEAR_CLIENT_SECRET=${LINEAR_CLIENT_SECRET}
LINEAR_WEBHOOK_SECRET=${LINEAR_WEBHOOK_SECRET}
LINEAR_AGENT_USER_ID=${LINEAR_AGENT_USER_ID}
LINEAR_API_KEY=${LINEAR_API_KEY}
LINEAR_BOT_OAUTH_TOKEN=${LINEAR_BOT_OAUTH_TOKEN}

# OpenCode Configuration
OPENCODE_API_BASE_URL=${OPENCODE_API_BASE_URL}
OPENCODE_WEBHOOK_SECRET=${OPENCODE_WEBHOOK_SECRET}
OPENCODE_API_KEY=${OPENCODE_API_KEY}
OPENCODE_SERVE_URL=http://localhost:53998
OPENCODE_SERVE_ENABLED=true

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# Security
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Logging
LOG_LEVEL=info
LOG_FILE=logs/agent.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_RESPONSES=${ENABLE_AI_RESPONSES:-true}
ENABLE_OPENCODE_INTEGRATION=${ENABLE_OPENCODE_INTEGRATION:-true}
ENABLE_ADVANCED_FEATURES=${ENABLE_ADVANCED_FEATURES:-true}
ENABLE_SIGNATURE_VERIFICATION=true

# Development Settings
DEBUG_LINEAR_WEBHOOKS=${DEBUG_LINEAR_WEBHOOKS:-false}
MOCK_OPENCODE_RESPONSES=false