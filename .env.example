# Linear Agent Configuration
LINEAR_OAUTH_CLIENT_ID=your_linear_oauth_client_id
LINEAR_OAUTH_CLIENT_SECRET=your_linear_oauth_client_secret
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret
LINEAR_AGENT_NAME=OpenCode Agent

# Server Configuration
PORT=3001
NODE_ENV=development

# OpenCode Integration
OPENCODE_API_BASE_URL=https://api.opencode.dev
OPENCODE_WEBHOOK_SECRET=your_opencode_webhook_secret

# Security
JWT_SECRET=your_jwt_secret_for_sessions
ENCRYPTION_KEY=your_32_character_encryption_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/agent.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
DEBUG_LINEAR_WEBHOOKS=true
MOCK_OPENCODE_RESPONSES=false